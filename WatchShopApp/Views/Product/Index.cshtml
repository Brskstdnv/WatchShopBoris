@model IEnumerable<WatchShopApp.Models.Product.ProductIndexVM>

@{
    ViewData["Title"] = "Index";
}
<h1>Products</h1>

@if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
{
    <p>
        <a asp-action="Create" class="btn btn-warning">Create New</a>
    </p>
}

<form asp-controller="Product" asp-action="Index" method="get">
    <p>
        Manufacturer: <input type="text" name="searchStringManufactureName" />
        Category: <input type="text" name="searchStringCategoryName" />
        Product Name: <input type="text" name="searchStringProductName" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="product-container">
    @foreach (var item in Model)
    {
        <div class="product-card">
            <img src="@Html.DisplayFor(modelItem => item.PictureUrl)" alt="Image">
            <h3>@Html.DisplayFor(modelItem => item.ProductName)</h3>
            <p><strong>Manufacturer:</strong> @Html.DisplayFor(modelItem => item.ManufactureName)</p>
            <p><strong>Category:</strong> @Html.DisplayFor(modelItem => item.CategoryName)</p>
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
            <p><strong>Quantity:</strong> @Html.DisplayFor(modelItem => item.Quantity)</p>
            <p><strong>Price:</strong> $@Html.DisplayFor(modelItem => item.Price)</p>
            <p class="text-success"><strong>Discount:</strong> @Html.DisplayFor(modelItem => item.Discount) %</p>

            <div class="buttons">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>

                @if (this.User.Identity.IsAuthenticated)
                {
                   
                    <a asp-controller="Order" asp-action="Create" asp-route-id="@item.Id" class="btn btn-warning">Order</a>
                }

                @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@section Styles {
    <style>
        .product-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .product-card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            width: 250px;
            height: 100%;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            background: white;
            text-align: center;
            transition: transform 0.2s ease-in-out;

        }

            .product-card:hover {
                transform: scale(1.05);
            }

            .product-card img {
                width: 100%;
                height: 200px;
                object-fit: contain;
                border-radius: 5px;
            }

            .product-card h3 {
                font-size: 18px;
                margin: 10px 0;
            }

            .product-card p {
                margin: 5px 0;
            }

            .product-card .buttons {
                margin-top: auto;
                display: flex;
                flex-direction: column;
                gap: 5px;
                margin-top: 15px;
            }

                .product-card .buttons a {
                    text-decoration: none;
                    padding: 8px;
                    border-radius: 5px;
                    font-weight: bold;
                    display: block;
                }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-warning {
            background-color: #ffc107;
            color: black;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
}




