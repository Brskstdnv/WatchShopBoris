@model WatchShopApp.Models.ShoppingCart.ShoppingCartVM
@{
    ViewData["Title"] = "Index";
}
<h2>Your Shopping Cart</h2>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.Price)</td>
                    <td>
                        <!-- Премахване на продукт -->
                        <a asp-action="Remove" asp-route-productId="@item.ProductId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.TotalPrice</h3>

    <!-- Изчистване на количката -->
    <a asp-action="Clear" class="btn btn-warning">Clear Cart</a>

    <br />
    <br />
    <!-- Бутони за продължаване към плащане или обратно към магазина -->
    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Continue Shopping</a>
    <a href="@Url.Action("Checkout", "Order")" class="btn btn-success">Proceed to Checkout</a>
}
